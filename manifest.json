{
  "name": "GeoStatsr",
  "description": "Keep your GeoStatsr server up-to-date by automatically sending your GeoGuessr stats to it when your game ends.",
  "version": "1.5.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "GeoStatsr settings"
  },
  "permissions": ["cookies", "storage"],
  "host_permissions": ["https://www.geoguessr.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.geoguessr.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
